<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/main2"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="callrecord.com.callrecord.MainActivity">

    <TextView
        android:text="Call Record"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/tv1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_height="40dp" />

    <Button
        android:text="Manager"
        android:layout_width="match_parent"
        android:layout_marginTop="96dp"
        android:id="@+id/btnManager"
        android:gravity="center"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/mainbutton_selector" />

    <Button
        android:text="Employee"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/btnEmployee"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/btnManager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:background="@drawable/mainbutton_selector" />
</RelativeLayout>
