<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context="felix.kawasakiapplication.LoginScreen">

    <include layout="@layout/tool_bar_checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <!--HEADER STARTS-->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/kawasakilogo"/>
    </RelativeLayout>
    <!-- HEADER ENDS -->

    <!--FOOTER STARTS -->
    <LinearLayout
        android:id="@+id/footer"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kawasakifooter"/>
    </LinearLayout>

    <!--FOOTER ENDS -->

        <LinearLayout
            android:id="@+id/heading_layout"
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Checklist"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_corner"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/footer"
            android:background="#000000"
            android:layout_below="@+id/heading_layout">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Manual"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:textColor="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/etwarranty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnwarrantyyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"/>
                    <Button
                        android:id="@+id/btnwarrantyno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#d3d3d3"/>

                <!-- Bike Graphics -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bike graphics"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:textColor="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/etbikegraphics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btngraphicsyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"/>
                    <Button
                        android:id="@+id/btngraphicsno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#d3d3d3"/>

                <!-- Indicators -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Indicators"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:textColor="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/etIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnindicatoryes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"/>
                    <Button
                        android:id="@+id/btnindicatorno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#d3d3d3"/>

                <!--Seat Cover -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Seat Cover"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:textColor="@color/colorPrimaryDark"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:id="@+id/etSeatcover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnseatyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"/>
                    <Button
                        android:id="@+id/btnseatno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#d3d3d3"/>


                <!-- Toolkit -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Toolkit"
                        android:textSize="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="1"/>
                    <EditText
                        android:textColor="@color/colorPrimaryDark"
                        android:backgroundTint="#ffffff"
                        android:id="@+id/etToolkit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:editable="false"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btntoolkityes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"/>
                    <Button
                        android:id="@+id/btntoolkitno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="2dp"
                    android:background="#d3d3d3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Please specify the following..."
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"/>

                <EditText
                    android:id="@+id/etNoofkeys"
                    android:hint="Keys"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/etBatteryMake"
                    android:hint="Battery Make"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#ffffff"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"/>
                <EditText
                    android:id="@+id/etTyreMake"
                    android:hint="Tyre Make"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:textColor="#ffffff"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnOK8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#d3d3d3"
                        android:textColor="#32CD32"
                        android:layout_marginLeft="5dp"
                        android:text="OK"
                        android:layout_marginRight="5dp"/>

                    <Button
                        android:id="@+id/btnCancel8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner"
                        android:backgroundTint="#d3d3d3"
                        android:textColor="#32CD32"
                        android:text="Cancel"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"/>


                </LinearLayout>



            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>