<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="felix.kawasakiapplication.LoginScreen">

    <include layout="@layout/tool_bar_guage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--HEADER STARTS-->

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/kawasakilogo" />

            <RelativeLayout
                android:id="@+id/guageLayout"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="95dp"
                android:background="#ffffff">

                <pl.pawelkleczkowski.customgauge.CustomGauge
                    android:id="@+id/gauge3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    app:dividerColor="@color/md_yellow_500"
                    app:dividerDrawFirst="false"
                    app:dividerDrawLast="true"
                    app:dividerSize="1"
                    app:dividerStep="10"
                    app:endValue="100"
                    app:pointEndColor="@color/md_green_500"
                    app:pointStartColor="@color/md_red_500"
                    app:startAngel="180"
                    app:startValue="0"
                    app:strokeCap="BUTT"
                    app:strokeColor="@color/md_grey_400"
                    app:strokeWidth="20dp"
                    app:sweepAngel="180" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/gauge3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="48dp"
                    android:text="0"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gasstation"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/gauge3"
                    android:layout_alignRight="@+id/gauge3"
                    android:layout_alignTop="@+id/textView2"
                    android:text="F"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_alignLeft="@+id/gauge3"
                    android:layout_alignStart="@+id/gauge3"
                    android:layout_alignTop="@+id/textView3"
                    android:text="E"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </RelativeLayout>
        </RelativeLayout>
        <!-- HEADER ENDS -->

        <!--FOOTER STARTS -->
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kawasakifooter" />
        </LinearLayout>

        <!--FOOTER ENDS -->


        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:max="100"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/thumb" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/seekBar1"
            android:layout_marginTop="79dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnSAVE7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner"
                android:backgroundTint="#d3d3d3"
                android:text="SAVE"
                android:textColor="#32CD32" />

            <Button
                android:id="@+id/btnOK7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner"
                android:backgroundTint="#d3d3d3"
                android:text="OK"
                android:textColor="#32CD32" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>